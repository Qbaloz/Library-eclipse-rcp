<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.library.app.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.library.app.perspectives.BooksPerspectiveFactory"
            id="com.library.app.booksperspective"
            name="Books">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="com.library.app.View"
            id="Library.view">
      </view>
      <view
            class="com.library.app.views.BooksListViewPart"
            id="com.library.app.bookslistview"
            name="Books List"
            restorable="true">
      </view>
      <view
            class="com.library.app.views.BookDetailsViewPart"
            id="com.library.app.bookdetails"
            name="Book Details"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="Library.perspective">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="Library.view">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.library.app.booksperspective">
         <view
               id="com.library.app.bookslistview"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               id="com.library.app.bookdetails"
               minimized="false"
               ratio="0.33"
               relationship="right"
               relative="com.library.app.bookslistview">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
